module ::Std::Elk::AST
	##[
		All nodes that should be valid constants
		should implement this interface.
	]##
	mixin ConstantNode
		include TypeNode,
						ExpressionNode,
						UsingEntryNode,
						ComplexConstantNode

		##[
			Indicates that the format of a
			constant node is invalid.
		]##
		class FormatError < Node::FormatError; end

		def to_ast_const_node: ConstantNode; end

		interface Convertible
			sig to_ast_const_node: ConstantNode
		end
	end
end
