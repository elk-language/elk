using Std::Test::Assertions::*
using Std::Test::*

describe "Time", ->
	context "now", ->
		should "return current time", ->
			t := Time.now
			assert! t <: Time
			assert! t.year > 2024
			assert! t.month > 0
			assert! t.day > 0
			assert! t.hour >= 0
			assert! t.minute >= 0
			assert! t.second >= 0
		end
	end
end
